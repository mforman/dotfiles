theme = "Catppuccin Macchiato"
background-opacity = 1.0

font-family = "Hack Nerd Font"
font-size = 15.0

window-padding-x = 8
window-padding-y = 0,2

copy-on-select = true
mouse-hide-while-typing = true
macos-option-as-alt = true

keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard

# Tmux-style prefix: Ctrl+A
# Note: Ghostty doesn't support a true "prefix" mode like tmux,
# so we use Ctrl+A as part of chord keybindings

# Split panes (tmux: prefix + \ for horizontal, prefix + - for vertical)
keybind = ctrl+a>backslash=new_split:right
keybind = ctrl+a>minus=new_split:down

# Navigate between splits using Alt+Arrow (no prefix needed, like tmux)
keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
keybind = alt+up=goto_split:top
keybind = alt+down=goto_split:bottom

# Create new tab/window (tmux: prefix + c)
keybind = ctrl+a>c=new_tab
keybind = ctrl+a>,=prompt_surface_title

# Toggle fullscreen/zoom (tmux: prefix + z)
keybind = ctrl+a>z=toggle_split_zoom


# Jump to specific tab number (tmux: prefix + 0-9)
keybind = ctrl+a>0=goto_tab:10
keybind = ctrl+a>1=goto_tab:1
keybind = ctrl+a>2=goto_tab:2
keybind = ctrl+a>3=goto_tab:3
keybind = ctrl+a>4=goto_tab:4
keybind = ctrl+a>5=goto_tab:5
keybind = ctrl+a>6=goto_tab:6
keybind = ctrl+a>7=goto_tab:7
keybind = ctrl+a>8=goto_tab:8
keybind = ctrl+a>9=goto_tab:9

# Close current split/tab (tmux: prefix + x)
keybind = ctrl+a>x=close_surface

# Reload config (tmux: prefix + r)
keybind = ctrl+a>r=reload_config

# Resize panes (tmux style with prefix + arrow)
keybind = ctrl+a>ctrl+left=resize_split:left,10
keybind = ctrl+a>ctrl+right=resize_split:right,10
keybind = ctrl+a>ctrl+up=resize_split:up,10
keybind = ctrl+a>ctrl+down=resize_split:down,10
